<Window x:Class="ScaryHalloweenStoryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scary Halloween Story Creator" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="part1TextBox" Text="" 
                     TextWrapping="Wrap" Margin="10" FontSize="16"/>
            <TextBox x:Name="part2TextBox" Text="" 
                     TextWrapping="Wrap" Margin="10" FontSize="16"/>
            <TextBox x:Name="part3TextBox" Text="" 
                     TextWrapping="Wrap" Margin="10" FontSize="16"/>
            <!-- Add more TextBoxes for other parts of the story as needed -->
            <Button Content="Create Scary Story" Click="OnCreateStoryButtonClick" Margin="10"/>
            <TextBlock x:Name="storyTextBlock" Text="" TextWrapping="Wrap" Margin="10" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
